    "dependsOn": [
      {
        "containerName": "zookeeper",
        "condition": "START"
      }
    ],
    "name": "kafka"
  },
  {
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/eventuate",
        "awslogs-region": "${logs_region}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "portMappings": [
      {
        "hostPort": 8099,
        "protocol": "tcp",
        "containerPort": 8099
      },
      {
        "hostPort": 8088,
        "protocol": "tcp",
        "containerPort": 8088
      }
    ],
    "cpu": 340,
    "environment": [
      {
        "name": "EVENTUATELOCAL_CDC_BINLOG_CLIENT_ID",
        "value": "1234567890"
      },
      {
        "name": "EVENTUATELOCAL_CDC_DB_PASSWORD",
        "value": "${db_pwd}"
      },
      {
        "name": "EVENTUATELOCAL_CDC_DB_USER_NAME",
        "value": "${db_user}"
